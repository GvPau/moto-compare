generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Motorcycle {
  id         Int    @id @default(autoincrement())
  brand      String
  model      String
  year       Int
  price      Int
  horsePower Int
  engineSize Int
  weight     Int
  type       String
  image      String
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  brand       String
  price       Float
  description String
  images      String[]
  category    ProductCategory
  inStock     Boolean         @default(true)
  rating      Float?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  details     Json
}

model Helmet {
  id            Int         @id @default(autoincrement())
  name          String
  brand         String
  price         Float
  description   String
  images        String[]
  inStock       Boolean     @default(true)
  rating        Float?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  size          HelmetSize
  style         HelmetStyle
  certification String[]
  weight        Float
}

enum ProductCategory {
  HELMET
  GLOVES
  BOOTS
  JACKETS
  PANTS
  PROTECTIONS
  ACCESSORIES
}

enum HelmetSize {
  XS
  S
  M
  L
  XL
  XXL
}

enum HelmetStyle {
  FULL_FACE
  MODULAR
  OPEN_FACE
  OFF_ROAD
}
